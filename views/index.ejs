<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')%>

<body>

    <%- include('./partials/nav.ejs') %>

    <div class="blogs-content">
    <h2>All Blogs</h2>
    </div>

    <% if (blogs.length > 0) {%>
        <% blogs.forEach(blog => { %>
            <h2 class="title"><%= blog.title %></h2>
            <p class="snippet"><%= blog.snippet %></p>
        <% } )%>

    <% } else { %>
    
        <p> No blogs found :) </p>
        <% } %>
    


<%- include('./partials/footer')%>
</body>

</html>